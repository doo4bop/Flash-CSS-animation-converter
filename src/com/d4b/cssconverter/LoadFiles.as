package com.d4b.cssconverter{	import flash.net.URLLoader;	import flash.net.URLRequest;	import flash.events.Event;	import flash.display.Sprite;	public class LoadFiles extends Sprite	{		public static const LOAD_COMPLETE:String = 'LoadFiles.complete';		private var files:Array;		private var loader:URLLoader;		private var index:int = 0;		public function LoadFiles( setFiles:Array )		{			//trace("LoadFiles");			files = setFiles;		}		public function start()		{			load();		}		private function load()		{			if (index >= files.length)			{				this.dispatchEvent( new Event( LOAD_COMPLETE ) );				return;			}						loader = new URLLoader();			loader.addEventListener(Event.COMPLETE, loadResponse);			loader.load(new URLRequest( files[index].src ));					}				private function loadResponse(e:Event)		{			trace("Loaded File:", files[index].src);			files[index].destination = e.target.data;			index++;			load();		}			}}