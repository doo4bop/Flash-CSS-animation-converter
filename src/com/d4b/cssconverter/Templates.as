package com.d4b.cssconverter{	import com.d4b.cssconverter.LoadFiles;		public class Templates	{		public static var path:String = '';		public static var animation:String = '';		public static var animation_base:String = '';		public static var index:String = '';		public static var image:String = '';		public static function populate( template:String, data:Object)		{			for (var key in data)			{				var reg:RegExp = new RegExp('%%' + key + '%%','g');				template = template.replace(reg,data[key]);			}			return template;		}		public function Templates()		{		}		public static function loadTemplates( setTemplates:Array , callback:Function)		{			var templatesLoader:LoadFiles = new LoadFiles(setTemplates);						templatesLoader.addEventListener( LoadFiles.LOAD_COMPLETE, callback);			templatesLoader.start();					}	}}